<style is:global>
	/* THEME VARIABLES */
	:root {
		/* DEFAULT (DARK MODE) */
		--primary: #ea580c;
		--primary-hover: #c2410c;
		
		--bg-main: #0f172a;
		--bg-card: #1e293b;
		--bg-input: #0f172a; /* Ensure input bg is dark by default */
		
		--text-main: #ffffff;
		--text-muted: #94a3b8;
		
		--text-white: #ffffff;
		--text-gray: #9ca3af;
		
		--border: #334155;
		--shadow: rgba(0,0,0,0.3);

		--font-head: 'Russo One', sans-serif;
		--font-body: 'Inter', sans-serif;
	}

	@media (prefers-color-scheme: light) {
		:root {
			/* LIGHT MODE OVERRIDES */
			--bg-main: #f1f5f9;
			--bg-card: #ffffff;
			--bg-input: #ffffff;
			
			--text-main: #0f172a;
			--text-muted: #64748b;
			
			--border: #cbd5e1; /* Slightly darker border for light mode */
			--shadow: rgba(0,0,0,0.1);
		}
	}
    
    /* GLOBAL RESET */
    *, *::before, *::after {
        box-sizing: border-box;
    }

	html, body {
		font-family: var(--font-body);
		background: var(--bg-main);
		color: var(--text-main);
		margin: 0; padding: 0;
		height: 100%;
		-webkit-tap-highlight-color: transparent;
	}

	/* Common Utility Classes for Text Colors */
	.text-primary { color: var(--primary) !important; }
	.russo-font { font-family: var(--font-head); }
    .hidden { display: none !important; }
	
	/* Global Inputs */
	input, textarea, select {
		background: var(--bg-input);
		color: var(--text-main);
		border: 1px solid var(--border);
	}
	input::placeholder { color: var(--text-muted); opacity: 0.7; }

	/* Scrollbar */
	::-webkit-scrollbar { width: 6px; }
	::-webkit-scrollbar-track { background: var(--bg-main); }
	::-webkit-scrollbar-thumb { background: var(--border); border-radius: 3px; }
</style>
